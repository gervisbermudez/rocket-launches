---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white">
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "D-DIN";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url(/public/fonts/d-din/D-DIN.woff2) format("woff2");
  }

  /**
 	add others font face d din here 
  */
  @font-face {
	font-family: "D-DIN";
	font-style: normal;
	font-weight: 700;
	font-display: swap;
	src: url(/public/fonts/d-din/D-DIN-Bold.woff2) format("woff2");
  }

  body {
	font-family: "D-DIN", sans-serif;
	font-weight: 400;
	font-size: 16px;
  }

  h1 {
	font-weight: 700;
  }

</style>
